<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.oracle.documaker.custom</groupId>
  <artifactId>Archiver-TelesignDestination</artifactId>
  <name>TelesignDestination</name>
  <version>1.0.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <archive>
            <manifest>
              <packageName>com.oracle.documaker.custom.destinations.Telesign</packageName>
            </manifest>
            <manifestEntries>
              <Created-By>andy.little@oracle.com</Created-By>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                    <exclude>module-info.*</exclude>
                  </excludes>
                </filter>
              </filters>
              <artifactSet>
                <excludes>
                  <exclude>module-info.*</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.oracle.documaker</groupId>
      <artifactId>connectorapi</artifactId>
      <version>12.7.0</version>
      <scope>system</scope>
      <systemPath>${documaker.library.path}/oracle-dmkr-connectorapi.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.oracle.documaker</groupId>
      <artifactId>log4j</artifactId>
      <version>12.7.0</version>
      <scope>system</scope>
      <systemPath>${documaker.library.path}/log4j-1.2.17-16.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <documaker.library.path>/Users/clittle/iCloudDrive/Work/dev/documaker/odee/12.7.0/localbuild/odee/documaker/docfactory/lib</documaker.library.path>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>8</maven.compiler.source>
    <maven.compiler.target>8</maven.compiler.target>
  </properties>
</project>
